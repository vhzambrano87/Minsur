@model WebAppMS.Models.DTOCamionesM

@{
    ViewBag.Title = "Camiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>Modificar Camiones </h2>

</header>

<!-- widget div-->
<div>

    @if (Model.resultado == 1)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Información</h4>
            <p>
                Se modificó correctamente la información.
            </p>
            <br>
        </div>
    }

    @if (Model.resultado == 2)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Error</h4>
            <p>
                No se pudo modificar la información.
            </p>
            <br>
        </div>
    }

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <form id="order-form" class="smart-form" novalidate="novalidate" method="post">
            @Html.HiddenFor(model => model.camion_id)
            @Html.HiddenFor(model => model.fecha_desc)
            @Html.HiddenFor(model => model.turno_id)
            @Html.HiddenFor(model => model.tipo_equipo_id)
            @Html.HiddenFor(model => model.usuario_crea)
            @Html.HiddenFor(model => model.fecha_crea)
            <fieldset>
                <div class="row">
                    <section class="col col-6">

                        <label class="label">Fecha</label>
                        <label class="input">
                            <i class="icon-append fa fa-calendar"></i>
                            <input id="fecha_text" type="text" name="request" class="datepicker" data-dateformat='dd/mm/yy'>
                        </label>
                        <br />
                        <label class="label">Turno</label>
                        <label class="select">
                            @Html.DropDownList("ListaTurno123", (IEnumerable<SelectListItem>)ViewBag.ListaTurno, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Tipo de Equipo</label>
                        <label class="select">
                            @Html.DropDownList("ListaTipoEquipo123", (IEnumerable<SelectListItem>)ViewBag.ListaTipoEquipo, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Horas Máquina</label>
                        <label class="input">
                            @Html.EditorFor(model => model.horas_maquina)
                            @Html.ValidationMessageFor(model => model.horas_maquina, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Detalle</label>
                        <label class="input">
                            @Html.EditorFor(model => model.detalle)
                        </label>
                        <br />
                        <label>
                            <i></i>Activo @Html.CheckBoxFor(model => model.activo)
                        </label>

                    </section>
                </div>
            </fieldset>

            <footer>
                <a href="@Url.Action("Index", "Camiones")" class="btn btn-primary">Volver</a>
                <input type="submit" class="btn btn-primary" name="submit" value="Modificar" onclick="ObtenerCombos()">
            </footer>
        </form>

    </div>
    <!-- end widget content -->
</div>
@section pagespecific {
    <script type="text/javascript">

            // DO NOT REMOVE : GLOBAL FUNCTIONS!

            $(document).ready(function () {
                $('body').css('zoom', '80%');
                document.getElementById("fecha_text").value = document.getElementById("fecha_desc").value;
            });
    </script>
}

<script type="text/javascript">

    function ObtenerCombos() {
        debugger;
        document.getElementById("fecha_desc").value = document.getElementById("fecha_text").value;
        document.getElementById("turno_id").value = document.getElementById("ListaTurno123").value;
        document.getElementById("tipo_equipo_id").value = document.getElementById("ListaTipoEquipo123").value;
     }

</script>