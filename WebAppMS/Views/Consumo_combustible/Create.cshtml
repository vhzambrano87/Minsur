@model WebAppMS.Models.DTOConsumo_combustibleM

@{
    ViewBag.Title = "Consumo_combustible";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>Registro Consumo de Combustible</h2>

</header>

<!-- widget div-->
<div>
    @if (Model.resultado == 1)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Información</h4>
            <p>
                Se registró correctamente la información.
            </p>
            <br>
        </div>
    }

    @if (Model.resultado == 2)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Error</h4>
            <p>
                No se pudo registrar la información.
            </p>
            <br>
        </div>
    }

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <form id="order-form" class="smart-form" novalidate="novalidate" method="post">

            @Html.HiddenFor(model => model.fecha)
            @Html.HiddenFor(model => model.fecha_desc)
            @Html.HiddenFor(model => model.guardia_id)
            @Html.HiddenFor(model => model.turno_id)
            @Html.HiddenFor(model => model.equipo_id)
            @Html.HiddenFor(model => model.operador_id)
            @Html.HiddenFor(model => model.usuario_crea)
            @Html.HiddenFor(model => model.fecha_crea)
            @Html.HiddenFor(model => model.usuario_mod)
            @Html.HiddenFor(model => model.fecha_mod)
            <fieldset>
                <div class="row">
                    <section class="col col-6">

                        <label class="label">Fecha</label>
                        <label class="input">
                            <i class="icon-append fa fa-calendar"></i>
                            <input id="fecha_text" type="text" name="request" class="datepicker" data-dateformat='dd/mm/yy' value="@Model.strfecha">
                        </label>
                        <br />
                        <label class="label">Guardia</label>
                        <label class="select">
                            @Html.DropDownList("ListaGuardia1", (IEnumerable<SelectListItem>)ViewBag.ListaGuardia, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Turno</label>
                        <label class="select">
                            @Html.DropDownList("ListaTurno1", (IEnumerable<SelectListItem>)ViewBag.ListaTurno, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Equipo</label>
                        <label class="select">
                            @Html.DropDownList("ListaEquipo1", (IEnumerable<SelectListItem>)ViewBag.ListaEquipo, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Galones</label>
                        <label class="input">
                            @Html.EditorFor(model => model.galones)
                            @Html.ValidationMessageFor(model => model.galones, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Operador</label>
                        <label class="select">
                            @Html.DropDownList("ListaOperador1", (IEnumerable<SelectListItem>)ViewBag.ListaOperador, new { @class = "select" })
                        </label>
                        <br />
                        <label>
                            <i></i>Activo @Html.CheckBoxFor(model => model.activo)
                        </label>
                        <br />

                    </section>
                </div>
            </fieldset>

            <footer>
                <a href="@Url.Action("Index", "Consumo_combustible")" class="btn btn-primary">Volver</a>
                <input type="submit" class="btn btn-primary" name="submit" value="Grabar" onclick="ObtenerCombos()">
            </footer>
        </form>

    </div>
    <!-- end widget content -->

</div>

<script type="text/javascript">
    function ObtenerCombos() {
        debugger;
        document.getElementById("guardia_id").value = document.getElementById("ListaGuardia1").value;
        document.getElementById("turno_id").value = document.getElementById("ListaTurno1").value;
        document.getElementById("equipo_id").value = document.getElementById("ListaEquipo1").value;
        document.getElementById("operador_id").value = document.getElementById("ListaOperador1").value;
        document.getElementById("fecha").value = document.getElementById("fecha_text").value;

    }

</script>

@section pagespecific {
    <script type="text/javascript">

            // DO NOT REMOVE : GLOBAL FUNCTIONS!

            $(document).ready(function () {
                $('body').css('zoom', '80%');
                document.getElementById("fecha_text").value = document.getElementById("fecha_desc").value;
            });
    </script>
}