@model WebAppMS.Models.DTOFlujos_presionesM

@{
    ViewBag.Title = "Flujos_presiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>Registro Flujo y Presiones</h2>

</header>

<!-- widget div-->
<div>
    @if (Model.resultado == 1)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Información</h4>
            <p>
                Se registró correctamente la información.
            </p>
            <br>
        </div>
    }

    @if (Model.resultado == 2)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Error</h4>
            <p>
                No se pudo registrar la información.
            </p>
            <br>
        </div>
    }

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <form id="order-form" class="smart-form" novalidate="novalidate" method="post">
            @Html.HiddenFor(model => model.fecha_desc)
            @Html.HiddenFor(model => model.celda_id)
            @Html.HiddenFor(model => model.operador_id)
            @Html.HiddenFor(model => model.ingeniero_id)

            <fieldset>
                <div class="row">
                    <section class="col col-6">
                        <label class="label">Fecha</label>
                        <label class="input">
                            <i class="icon-append fa fa-calendar"></i>
                            <input id="fecha_text" type="text" name="request" class="datepicker" data-dateformat='dd/mm/yy'>
                        </label>
                        <br />
                        <label class="label">Celda</label>
                        <label class="select">
                            @Html.DropDownList("ListaCelda123", (IEnumerable<SelectListItem>)ViewBag.ListaCelda, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Operador</label>
                        <label class="select">
                            @Html.DropDownList("ListaOperador123", (IEnumerable<SelectListItem>)ViewBag.ListaOperador, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Ingeniero</label>
                        <label class="select">
                            @Html.DropDownList("ListaIngeniero123", (IEnumerable<SelectListItem>)ViewBag.ListaIngeniero, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Flujo</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo)
                        </label>
                        <br />
                        <label class="label">Presión</label>
                        <label class="input">
                            @Html.EditorFor(model => model.presion)
                            @Html.ValidationMessageFor(model => model.presion, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo Real</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_real)
                            @Html.ValidationMessageFor(model => model.flujo_real, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Presión Real</label>
                        <label class="input">
                            @Html.EditorFor(model => model.presion_real)
                            @Html.ValidationMessageFor(model => model.presion_real, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo Corregido</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_corregido)
                            @Html.ValidationMessageFor(model => model.flujo_corregido, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Presión Corregida</label>
                        <label class="input">
                            @Html.EditorFor(model => model.presion_corregida)
                            @Html.ValidationMessageFor(model => model.presion_corregida, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Totalizador</label>
                        <label class="input">
                            @Html.EditorFor(model => model.totalizador)
                            @Html.ValidationMessageFor(model => model.totalizador, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Comentarios</label>
                        <label class="input">
                            @Html.EditorFor(model => model.comentarios)
                        </label>
                        <br />
                        <label>
                            <i></i>Activo @Html.CheckBoxFor(model => model.activo)
                        </label>

                    </section>
                </div>
            </fieldset>

            <footer>
                <a href="@Url.Action("Index", "Flujos_presiones")" class="btn btn-primary">Volver</a>
                <input type="submit" class="btn btn-primary" name="submit" value="Grabar" onclick="ObtenerCombos()">
            </footer>
        </form>

    </div>
    <!-- end widget content -->

</div>
@section pagespecific {
    <script type="text/javascript">

            // DO NOT REMOVE : GLOBAL FUNCTIONS!

            $(document).ready(function () {
                $('body').css('zoom', '80%');
                document.getElementById("fecha_text").value = document.getElementById("fecha_desc").value;
            });
    </script>
}

<script type="text/javascript">

    function ObtenerCombos() {
        debugger;
        document.getElementById("fecha_desc").value = document.getElementById("fecha_text").value;
        document.getElementById("celda_id").value = document.getElementById("ListaCelda123").value;
        document.getElementById("operador_id").value = document.getElementById("ListaOperador123").value;
        document.getElementById("ingeniero_id").value = document.getElementById("ListaIngeniero123").value;
     }

</script>