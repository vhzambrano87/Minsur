        document.getElementById("serie_id").value = document.getElementById("ListaSerie123").value;
        document.getElementById("fecha_desc").value = document.getElementById("fecha_text").value;

        document.getElementById("hora_inicio").value = document.getElementById("hora_hora_iniH").value + ":" + document.getElementById("hora_min_iniH").value;
        document.getElementById("hora_fin").value = document.getElementById("hora_hora_finH").value + ":" + document.getElementById("hora_min_finH").value;
              

    }

    function CalcularDuracion()
    {
        debugger;
        document.getElementById("hora_inicio").value = document.getElementById("hora_hora_iniH").value + ":" + document.getElementById("hora_min_iniH").value;
        document.getElementById("hora_fin").value = document.getElementById("hora_hora_finH").value + ":" + document.getElementById("hora_min_finH").value;
        var timeStartStr = '2016-01-01 ' + document.getElementById("hora_inicio").value;
        var timeEndStr = '2016-01-01 ' + document.getElementById("hora_fin").value;
        var timeStart = new Date(timeStartStr);
        var timeEnd = new Date(timeEndStr);
        var timeDiff = new Date(timeEnd.getTime() - timeStart.getTime());
        document.getElementById("duracion").value = timeDiff.toISOString().substring(11, 23);
    }

</script>
