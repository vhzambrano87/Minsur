@model WebAppMS.Models.DTOTipo_paradaM

@{
    ViewBag.Title = "Tipo_parada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>Modificar Tipo_parada </h2>

</header>

<!-- widget div-->
<div>

    @if (Model.resultado == 1)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Información</h4>
            <p>
                Se modificó correctamente la información.
            </p>
            <br>
        </div>
    }

    @if (Model.resultado == 2)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Error</h4>
            <p>
                No se pudo modificar la información.
            </p>
            <br>
        </div>
    }

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <form id="order-form" class="smart-form" novalidate="novalidate" method="post">
            @Html.HiddenFor(model => model.tipo_parada_id)
            @Html.HiddenFor(model => model.tipo_parada)
            @Html.HiddenFor(model => model.sub_tipo_parada)
            @Html.HiddenFor(model => model.estado_serie)
            @Html.HiddenFor(model => model.usuario_crea)
            @Html.HiddenFor(model => model.fecha_crea)
            @Html.HiddenFor(model => model.usuario_mod)
            @Html.HiddenFor(model => model.fecha_mod)      
            @Html.HiddenFor(model => model.resultado)          
            <fieldset>
                <div class="row">
                    <section class="col col-6">
                        <label class="label">Tipo_parada</label>
                        <label class="select">
                            @Html.DropDownList("ListaTParada123", (IEnumerable<SelectListItem>)ViewBag.ListaTParada, new { @class = "select" })
                            @Html.ValidationMessageFor(model => model.tipo_parada_id, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Sub Tipo Parada</label>
                        <label class="select">
                            @Html.DropDownList("ListaSTParada123", (IEnumerable<SelectListItem>)ViewBag.ListaSTParada, new { @class = "select" })
                            @Html.ValidationMessageFor(model => model.sub_tipo_parada, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Codigo Serie</label>
                        <label class="input">
                            @Html.EditorFor(model => model.codigo_serie)
                            @Html.ValidationMessageFor(model => model.codigo_serie, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Descripcion Serie</label>
                        <label class="input">
                            @Html.EditorFor(model => model.descripcion_serie)
                            @Html.ValidationMessageFor(model => model.descripcion_serie, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Estado Serie</label>
                        <label class="select">
                            @Html.DropDownList("ListaEstado123", (IEnumerable<SelectListItem>)ViewBag.ListaEstado, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Observaciones</label>
                        <label class="input">
                            @Html.EditorFor(model => model.observaciones)
                        </label>
                        <br />
                        <label>
                            <i></i>Activo @Html.CheckBoxFor(model => model.activo)
                        </label>
                    </section>
                </div>
            </fieldset>

            <footer>
                <a href="@Url.Action("Index", "Tipo_parada")">Volver</a>
                <input type="submit" class="btn btn-primary" name="submit" value="Modificar" onclick="ObtenerCombos()">
            </footer>
        </form>

    </div>
    <!-- end widget content -->
</div>
@section pagespecific {
    <script type="text/javascript">

            // DO NOT REMOVE : GLOBAL FUNCTIONS!

            $(document).ready(function () {
                $('body').css('zoom', '80%');
            });
    </script>
}
<script type="text/javascript">
    function ObtenerCombos() {
        debugger;
        document.getElementById("tipo_parada").value = document.getElementById("ListaTParada123").value;
        document.getElementById("sub_tipo_parada").value = document.getElementById("ListaSTParada123").value;
        document.getElementById("estado_serie").value = document.getElementById("ListaEstado123").value;
    }

</script>