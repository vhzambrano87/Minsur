@model WebAppMS.Models.DTOTurno_lixM

@{
    ViewBag.Title = "Turno_lix";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
    <h2>Modificar Turno_lix </h2>

</header>

<!-- widget div-->
<div>

    @if (Model.resultado == 1)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Información</h4>
            <p>
                Se modificó correctamente la información.
            </p>
            <br>
        </div>
    }

    @if (Model.resultado == 2)
    {
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">×</a>
            <h4 class="alert-heading">Error</h4>
            <p>
                No se pudo modificar la información.
            </p>
            <br>
        </div>
    }

    <!-- widget edit box -->
    <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

    </div>
    <!-- end widget edit box -->
    <!-- widget content -->
    <div class="widget-body no-padding">

        <form id="order-form" class="smart-form" novalidate="novalidate" method="post">
            @Html.HiddenFor(model => model.turno_lix_id)
            @Html.HiddenFor(model => model.turno_id)
            @Html.HiddenFor(model => model.fecha_desc)

            @Html.HiddenFor(model => model.usuario_crea)
            @Html.HiddenFor(model => model.fecha_crea)        
            <fieldset>
                <div class="row">
                    <section class="col col-6">

                        <label class="label">Fecha</label>
                        <label class="input">
                            <i class="icon-append fa fa-calendar"></i>
                            <input id="fecha_text" type="text" name="request" class="datepicker" data-dateformat='dd/mm/yy'>
                        </label>
                        <br />
                        <label class="label">Turno</label>
                        <label class="select">
                            @Html.DropDownList("ListaTurno123", (IEnumerable<SelectListItem>)ViewBag.ListaTurno, new { @class = "select" })
                        </label>
                        <br />
                        <label class="label">Poza Pls</label>
                        <label class="input">
                            @Html.EditorFor(model => model.poza_pls)
                            @Html.ValidationMessageFor(model => model.poza_pls, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Lluvia</label>
                        <label class="input">
                            @Html.EditorFor(model => model.lluvia)
                            @Html.ValidationMessageFor(model => model.lluvia, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Oro M1 Tren 1</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_oro_m1_tren_1)
                            @Html.ValidationMessageFor(model => model.ley_oro_m1_tren_1, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Oro M1 Tren 2</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_oro_m1_tren_2)
                            @Html.ValidationMessageFor(model => model.ley_oro_m1_tren_2, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Oro M2 Tren 1</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_oro_m2_tren_1)
                            @Html.ValidationMessageFor(model => model.ley_oro_m2_tren_1, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Oro M2 Tren 2</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_oro_m2_tren_2)
                            @Html.ValidationMessageFor(model => model.ley_oro_m2_tren_2, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Oro M3</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_oro_m3)
                            @Html.ValidationMessageFor(model => model.ley_oro_m3, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Plata M1 Tren 1</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_plata_m1_tren_1)
                            @Html.ValidationMessageFor(model => model.ley_plata_m1_tren_1, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Plata M1 Tren 2</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_plata_m1_tren_2)
                            @Html.ValidationMessageFor(model => model.ley_plata_m1_tren_2, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Plata M2 Tren 1</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_plata_m2_tren_1)
                            @Html.ValidationMessageFor(model => model.ley_plata_m2_tren_1, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Ley Plata M2 Tren 2</label>
                        <label class="input">
                            @Html.EditorFor(model => model.ley_plata_m2_tren_2)
                            @Html.ValidationMessageFor(model => model.ley_plata_m2_tren_2, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo ADR Tren 1</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_adr_tren_1)
                            @Html.ValidationMessageFor(model => model.flujo_adr_tren_1, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo ADR Tren 2</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_adr_tren_2)
                            @Html.ValidationMessageFor(model => model.flujo_adr_tren_2, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo Lixiviacion</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_lixiviacion)
                            @Html.ValidationMessageFor(model => model.flujo_lixiviacion, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Factor</label>
                        <label class="input">
                            @Html.EditorFor(model => model.factor)
                            @Html.ValidationMessageFor(model => model.factor, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo ADR Tren 1 Calc</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_adr_tren_1_calc)
                            @Html.ValidationMessageFor(model => model.flujo_adr_tren_1_calc, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo ADR Tren 2 Calc</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_adr_tren_2_calc)
                            @Html.ValidationMessageFor(model => model.flujo_adr_tren_2_calc, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label class="label">Flujo Lixiviacion Calc</label>
                        <label class="input">
                            @Html.EditorFor(model => model.flujo_lixiviacion_calc)
                            @Html.ValidationMessageFor(model => model.flujo_lixiviacion_calc, "", new { @class = "text-danger" })
                        </label>
                        <br />
                        <label>
                            <i></i>Activo @Html.CheckBoxFor(model => model.activo)
                        </label>
                    </section>
                </div>
            </fieldset>

            <footer>
                <a href="@Url.Action("Index", "Turno_lix")">Volver</a>
                <input type="submit" class="btn btn-primary" name="submit" value="Modificar" onclick="ObtenerCombos()">
            </footer>
        </form>

    </div>
    <!-- end widget content -->
</div>
@section pagespecific {
    <script type="text/javascript">

            // DO NOT REMOVE : GLOBAL FUNCTIONS!

            $(document).ready(function () {
                $('body').css('zoom', '80%');
                document.getElementById("fecha_text").value = document.getElementById("fecha_desc").value;
            });
    </script>
}

<script type="text/javascript">

    function ObtenerCombos() {
        debugger;
        document.getElementById("fecha_desc").value = document.getElementById("fecha_text").value;
        document.getElementById("turno_id").value = document.getElementById("ListaTurno123").value;
     }

</script>